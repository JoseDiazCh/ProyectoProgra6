
@{
    ViewBag.Title = "TipoVehiculoNuevo";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:35px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Agrega Tipo De Vehículo </h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 60%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">
                    <form id="frmTipoVehiculo" method="post">
                        <div class="form-group">
                            <label>Codigo:</label>
                            <input type="text" name="Codigo" id="Codigo" class="form-control" placeholder="Ingrese un código" />
                        </div>

                        <div class="form-group">
                            <label>Tipo De Vehiculo :</label>
                            <input type="text" name="Tipo" id="Tipo" class="form-control" placeholder="Igrese el tipo de vehículo" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Guardar" id="btnAceptar" class="btn btn-success" style=" border-color:black ; color:red"/>
                        </div>
                        <a style="color:darkblue" href="~/TiposVehiculos/TiposVehiculosLista"> Lista de tipos de vehículos</a>
                    </form>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>
</body>
    @section scripts{
        @Scripts.Render("~/bundles/bundleJquery")
        <script src="~/Scripts/ValidacionesInserta/InsertTipoVehiculo.js"></script>

    }

