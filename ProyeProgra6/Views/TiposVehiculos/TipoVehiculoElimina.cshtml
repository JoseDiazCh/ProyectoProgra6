@model ProyeProgra6.Models.sp_RetornaTiposVehiculos_ID_Result
@{
    ViewBag.Title = "TipoVehiculoElimina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 275px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:55px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Elimina El Tipo De Vehiculo </h2>
                    </div>
                </div>
            </div>

        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">
                    <form id="frmNuevaPersona" method="post">
                        <input type="hidden" name="idTipoVehiculo" id="idTipoVehiculo" value="@Model.idTipoVehiculo" />
                        <div class="form-group">
                            <br />
                            <label>Codigo:</label>
                            <input type="text" name="Codigo" id="Codigo" class="form-control" value="@Model.Codigo" readonly />
                        </div>

                        <div class="form-group">
                            <label>Tipo Vehiculo:</label>
                            <input type="text" name="Tipo" id="Tipo" class="form-control" value="@Model.Tipo" readonly />
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Eliminar" id="btnAceptar" class="btn btn-success"  style=" border-color:black ; color:red"/>
                        </div>
                        <a style="color:darkblue" href="~/TiposVehiculos/TiposVehiculosLista"> Lista De Tipos de Vehiculos</a>
                    </form>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>
</body>
