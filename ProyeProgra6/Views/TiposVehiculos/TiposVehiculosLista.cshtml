
@model List<ProyeProgra6.Models.sp_RetornaTiposVehiculos_Result>
@{
    ViewBag.Title = "TiposVehiculosLista";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 80px;
        margin-right: 100px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:95px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Lista De Los Tipos Vehiculos </h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 70%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">
                    <table class="table">
                        <tr>
                            <th>Codigo</th>
                            <th>Tipo</th>
                            <th>Acciones</th>

                        </tr>

                        @{ foreach (ProyeProgra6.Models.sp_RetornaTiposVehiculos_Result posicionModelo
                                            in this.Model)
                            {
                                <tr>
                                    <td>@posicionModelo.Codigo</td>
                                    <td>@posicionModelo.Tipo</td>
                                    <td>
                                        <a style="color:darkblue" href="~/TiposVehiculos/ModificaTipoVehiculo?idTipoVehiculo=@posicionModelo.idTipoVehiculo">Modificar</a>
                                        <br />
                                        <a style="color:darkblue" href="~/TiposVehiculos/TipoVehiculoElimina?idTipoVehiculo=@posicionModelo.idTipoVehiculo">Eliminar</a>

                                    </td>

                                </tr>
                            }
                        }
                    </table>
                    <a style="color:darkblue" href="~/TiposVehiculos/TipoVehiculoNuevo"> Registar Nuevo Tipo De Vehiculo</a>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>
</body>
