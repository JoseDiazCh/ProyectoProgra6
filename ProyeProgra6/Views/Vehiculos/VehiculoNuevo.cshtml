
@{
    ViewBag.Title = "VehiculoNuevo";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:95px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Agregar nuevo Vehículo</h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 70%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">  Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">
                    <form id="frmNuevoVehiculo" method="post">
                        <div class="form-group">
                            <label>Placa:</label>
                            <input type="text" name="placa" id="placa" class="form-control" placeholder="Ingrese una placa" />
                        </div>

                        <div class="form-group">
                            <label>Numero de Puertas:</label>
                            <input type="text" name="numeropuertas" id="numeropuertas" class="form-control" placeholder="Ingrese las puertas del Vehículo" />
                        </div>

                        <div class="form-group">
                            <label>Numero de Ruedas:</label>
                            <input type="text" name="numeroruedas" id="numeroruedas" class="form-control" placeholder="Ingrese las ruedas del Vehículo" />
                        </div>

                        <div class="form-group">
                            <label>Marca del Vehiculo :</label>
                            <select name="idMarcaVehiculos" id="idMarcaVehiculos" class="form-control">
                                <option value=""> Seleccione una Marca</option>
                                @{
                                    foreach (ProyeProgra6.Models.sp_RetornaMarcaVehiculo_Result marcas
                                        in this.ViewBag.ListaMarca)
                                    {
                                        <option value="@marcas.idMarcaVehiculos">@marcas.Tipo</option>

                                    }

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label>Tipo del Vehiculo :</label>
                            <select name="idTipoVehiculo" id="idTipoVehiculo" class="form-control">
                                <option value=""> Seleccione un Tipo</option>
                                @{
                                    foreach (ProyeProgra6.Models.sp_RetornaTiposVehiculos_Result tipos
                                        in this.ViewBag.ListaTipos)
                                    {
                                        <option value="@tipos.idTipoVehiculo">@tipos.Tipo</option>

                                    }

                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" id="btnAceptar" class="btn btn-success" style=" border-color:black ; color:red"/>
                        </div>
                        <a style="color:darkblue" href="~/Vehiculos/VehiculosLista"> Lista de Vehículos</a>
                    </form>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>
</body>
    @section scripts{
        @Scripts.Render("~/bundles/bundleJquery")
        <script src="~/Scripts/ValidacionesInserta/InsertaVehiculo.js"></script>
    }

