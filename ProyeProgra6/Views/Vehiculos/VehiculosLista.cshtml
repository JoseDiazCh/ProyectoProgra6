
@model List<ProyeProgra6.Models.sp_RetornaVehiculos_Result>

@{
    ViewBag.Title = "VehiculosLista";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 70px;
        margin-right: 65px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:265px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Lista De Vehiculos</h2>
                    </div>
                </div>
            </div>

        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">

                    <table class="table">
                        <tr>
                            <th>Placa</th>
                            <th>Marca Vehiculo</th>
                            <th>Tipo de Vehiculo</th>
                            <th>Numero de Puertas</th>
                            <th>Numero de Ruedas</th>
                            <th>Acciones</th>
                        </tr>

                        @{ foreach (ProyeProgra6.Models.sp_RetornaVehiculos_Result posicionModelo
                                               in this.Model)
                            {
                                <tr>
                                    <td>@posicionModelo.Placa</td>
                                    <td>@posicionModelo.Marca_Vehiculo</td>
                                    <td>@posicionModelo.Tipo_Vehiculo</td>
                                    <td>@posicionModelo.NumeroPuertas</td>
                                    <td>@posicionModelo.NumeroRuedas</td>

                                    <td>
                                        <a style="color:darkblue" href="~/Vehiculos/ModificaVehiculo?idVehiculo=@posicionModelo.idVehiculo">Modificar</a>
                                        <br />
                                        <a style="color:darkblue" href="~/Vehiculos/EliminaVehiculo?idVehiculo=@posicionModelo.idVehiculo">Eliminar</a>

                                    </td>
                                </tr>
                            }
                        }
                    </table>

                    <a style="color:darkblue" href="~/Vehiculos/VehiculoNuevo"> Registar Nuevo Vehiculo</a>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>
</body>

