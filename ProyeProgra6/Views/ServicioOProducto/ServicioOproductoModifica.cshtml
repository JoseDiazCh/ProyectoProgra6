@model ProyeProgra6.Models.sp_RetornaServicioOProducto_ID_Result
@{
    ViewBag.Title = "ServicioOproductoModifica";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:15px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1"> Modifica El Servicio  Producto </h2>
                    </div>
                </div>
            </div>

        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">

                    <form id="frmModificaProducto" method="post">
                        <input type="hidden" name="idServProduc" id="idServProduc" value="@Model.idServProduc" />
                        <div class="form-group">
                            <label>Codigo:</label>
                            <input type="text" name="codigo" id="codigo" class="form-control" value="@Model.Codigo" />
                        </div>
                        <div class="form-group">
                            <label>Descripcion:</label>
                            <input type="text" name="descripcion" id="descripcion" class="form-control" value="@Model.Descripcion" />
                        </div>

                        <div class="form-group">
                            <label>Precio:</label>
                            <input type="text" name="precio" id="precio" class="form-control" value="@Model.Precio" />
                        </div>
                        <div class="form-check">
                            <label>Tipo:  </label>
                            <br />
                            <input type="radio" name="tipo" value="Servicio" class="form-check-input" @(Model.Tipo == "Servicio" ? "checked" : "") /> Servicio
                            <br />
                            <input type="radio" name="tipo" value="Producto" class="form-check-input" @(Model.Tipo == "Producto" ? "checked" : "") /> Producto
                            <br />
                        </div>



                        <br />
                        <div class="form-group">
                            <input type="submit" value="Modificar" id="btnAceptar" class="btn btn-success" style=" border-color:black ; color:red"/>
                        </div>
                        <br />
                        <a style="color:darkblue" href="~/ServicioOProducto/ServicioOProductoLista"> Lista de Servicio O Producto</a>

                    </form>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>

</body>

