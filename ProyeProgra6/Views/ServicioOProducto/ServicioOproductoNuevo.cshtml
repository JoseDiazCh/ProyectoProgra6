
@{
    ViewBag.Title = "ServicioOproductoNuevo";
}

<h2>Agregar Nuevo Servicio O Producto</h2>


<form id="frmInsertServicio" method="post">
    <div class="form-group">
        <label>Codigo:</label>
        <input type="text" name="codigo" id="codigo" class="form-control" value="" />
    </div>

    <div class="form-group">
        <label>Descripcion:</label>
        <input type="text" name="descripcion" id="descripcion" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label>Precio:</label>
        <input type="text" name="precio" id="precio" class="form-control" value="" />
    </div>

    <div class="form-check">
        <label>Tipo:  </label>
        <br />
        <input type="radio" name="tipo" value="Servicio" class="form-check-input" /> Servicio
        <br />
        <input type="radio" name="tipo" value="Producto" class="form-check-input" /> Producto

    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Guardar" id="btnAceptar" />
    </div>
    <br />
</form>
<a href="~/ServicioOProducto/ServicioOProductoLista"> Lista de Servicio O Producto</a>

@section scripts{
    @Scripts.Render("~/bundles/bundleJquery")
    <script src="~/Scripts/ValidacionesInserta/InsertaServicio.js"></script>

}

