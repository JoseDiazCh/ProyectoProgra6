
@{
    ViewBag.Title = "ServicioOproductoNuevo";
}
@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px black;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:95px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 40px; padding-right: 40px">
                        <h2 class="auto-style1">Agregar nuevo Servicio o Producto</h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 60%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">  Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 10px;">

                    <form id="frmInsertServicio" method="post">
                        <div class="form-group">
                            <label>Codigo:</label>
                            <input type="text" name="codigo" id="codigo" class="form-control" value="" placeholder="Ingrese un código"/>
                        </div>

                        <div class="form-group">
                            <label>Descripcion:</label>
                            <input type="text" name="descripcion" id="descripcion" class="form-control" value="" placeholder="Ingrese la descripción "/>
                        </div>
                        <div class="form-group">
                            <label>Precio:</label>
                            <input type="text" name="precio" id="precio" class="form-control" value="" placeholder="Ingrese el precio" />
                        </div>

                        <div class="form-check">
                            <label>Tipo:  </label>
                            <br />
                            <input type="radio" name="tipo" value="Servicio" class="form-check-input" /> Servicio
                            <br />
                            <input type="radio" name="tipo" value="Producto" class="form-check-input" /> Producto

                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Guardar" id="btnAceptar"class="btn btn-success" style=" border-color:black ; color:red" />
                        </div>
                        <br />
                    </form>
                    <a style="color:darkblue"  href="~/ServicioOProducto/ServicioOProductoLista"> Lista de Servicio o Producto</a>
                </div>
                <!--Fin Cuerpo Panel-->
            </div>
            <!--Fin Panel-->

        </div>

    </div>



</body>  @section scripts{
    @Scripts.Render("~/bundles/bundleJquery")
    <script src="~/Scripts/ValidacionesInserta/InsertaServicio.js"></script>

}