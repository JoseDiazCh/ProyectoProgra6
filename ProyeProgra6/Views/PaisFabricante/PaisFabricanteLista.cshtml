@model List<ProyeProgra6.Models.sp_RetornaPaísFabricante_Result>
@{
    ViewBag.Title = "PaisFabricanteLista";
}

@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px white;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 120px;
        margin-right: 195px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:55px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 1px; padding-right: 10px">
                        <h2 class="auto-style1"> Lista Del Pais  De Fabricacion</h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 70%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">  Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 20px;">

                    <table class="table">
                        <tr>
                            <th>Codigo</th>
                            <th>Pais</th>
                            <th>Acciones</th>


                        </tr>

                        @{ foreach (ProyeProgra6.Models.sp_RetornaPaísFabricante_Result posicionModelo
                                               in this.Model)
                            {
                                <tr>
                                    <td>@posicionModelo.Codigo</td>
                                    <td>@posicionModelo.Pais</td>

                                    <td>
                                        <a style="color:darkblue" href="~/PaisFabricante/ModificaPaisFabricacion?idPaisFabricante=@posicionModelo.idPaisFabricante">Modificar</a>
                                        <br />
                                        <a style="color:darkblue" href="~/PaisFabricante/EliminaPaisFabricacion?idPaisFabricante=@posicionModelo.idPaisFabricante">Eliminar</a>

                                    </td>

                                </tr>
                            }
                        }
                    </table>
                    <a style="color:darkblue" href="~/PaisFabricante/PaisFabricacionNuevo"> Registar Nuevo Pais De Fabricacion</a>
                    <!--Fin Cuerpo Panel-->
                </div>
                <!--Fin Panel-->

            </div>
        </div>
    </div>

</body>

