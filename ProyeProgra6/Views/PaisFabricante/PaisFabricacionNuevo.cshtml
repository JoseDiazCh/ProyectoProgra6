
@{
    ViewBag.Title = "PaisFabricacionNuevo";
}

@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px white;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:55px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 1px; padding-right: 10px">
                        <h2 class="auto-style1"> País de Fabricación Nuevo</h2>
                    </div>
                </div>
            </div>
            <h4>
                <a style="color: black; margin-left: 80%;padding: 10px;
             " href="~/Principal/PaginaPrincipal">  Pagina Principal</a>
            </h4>
        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 20px;">

                    <form id="frmNuevaPais" method="post">
                        <div class="form-group">
                            <label>Codigo:</label>
                            <input type="text" name="codigo" id="codigo" class="form-control"placeholder="Ingrese un código" />
                        </div>

                        <div class="form-group">
                            <label>Pais:</label>
                            <input type="text" name="pais" id="pais" class="form-control"placeholder="Ingrese el país de fabricación" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Guardar" id="btnAceptar" class="btn btn-success" style=" border-color:black ; color:red" />
                        </div>
                        <a style="color:darkblue" href="~/PaisFabricante/PaisFabricanteLista"> Lista de paises de Fabricación</a>
                    </form>
                    <!--Fin Cuerpo Panel-->
                </div>
                <!--Fin Panel-->
            </div>
        </div>
    </div>

</body>
    @section scripts{
        @Scripts.Render("~/bundles/bundleJquery")
        <script src="~/Scripts/ValidacionesInserta/InsertPaisF.js"></script>

    }
