
@model ProyeProgra6.Models.sp_RetornaPaísFabricante_ID_Result
@{
    ViewBag.Title = "EliminaPaisFabricacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{

    <link href="~/Content/imegenFondo.css" rel="stylesheet" />
}
<body class="imagenFondo">
    <!--Panel-->
    <div class="panel panel-primary"
         style="        text-align: left;
        border: solid 5px white;
        border-color: white;
        filter: drop-shadow(15px 15px 20px #444);
        margin-left: 200px;
        margin-right: 255px;
        margin-top: 15px">
        <!--Encabezado Del Panel-->
        <div class="panel-heading">
            <div class="row" style="display: flex">
                <div style="margin-left:55px; margin-top: 10px">

                    <div style=" margin-bottom: 15px; padding-left: 1px; padding-right: 10px">
                        <h2 class="auto-style1">Elimina Pais De Fabricacion</h2>
                    </div>
                </div>
            </div>

        </div>
        <!--Fin Encabezado Del Panel-->
        <!--Cuerpo Del Panel-->
        <div class="panel-body" style="background-color: aqua; color:black">

            <!-- Columnnas Del Panel-->
            <div class="row" style="display: flex">
                <!-- Primera Columnna Del Panel-->
                <div class="column" style="flex: 50%; padding: 20px;">

                    <form id="frmNuevaPersona" method="post">
                        <input type="hidden" name="idPaisFabricante" id="idPaisFabricante" value="@Model.idPaisFabricante" />
                        <div class="form-group">
                            <br />
                            <label>Codigo:</label>
                            <input type="text" name="codigo" id="codigo" class="form-control" value="@Model.Codigo" readonly />
                        </div>

                        <div class="form-group">
                            <label>Pais:</label>
                            <input type="text" name="pais" id="pais" class="form-control" value="@Model.Pais" readonly />
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Guardar" id="btnAceptar" class="btn btn-success" style=" border-color:black ; color:red" />
                        </div>
                        <a style="color:darkblue" href="~/PaisFabricante/PaisFabricanteLista"> Lista De Paises De Fabricacion</a>
                    </form>
                    <!--Fin Cuerpo Panel-->
                </div>
                <!--Fin Panel-->
            </div>
        </div>
    </div>
</body>
    @section Scripts{
        @* *****No es necesario incluir jquery porque
            ya el layout lo incluye*@
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/scripts/Usuarios/ValidacionesGenericas.js")

    }


